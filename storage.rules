
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is common for profile pictures, post images, and short videos.
    match /{allPaths=**} {
      allow read;
    }

    // Restrict writes to authenticated users.
    // Users can only upload files to their own designated folder,
    // preventing them from overwriting other users' files.
    match /posts/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /shorts/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
